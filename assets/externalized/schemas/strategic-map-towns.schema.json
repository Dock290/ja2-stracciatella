{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "townId": {
        "$ref": "types/int8.schema.json"
      },
      "sectors": {
        "type": "array",
        "minItems": 1,
        "items": {
          "$ref": "types/sector-id.schema.json"
        }
      },
      "townPoint": {
        "type": "object",
        "properties": {
          "x": {
            "$ref": "types/uint16.schema.json"
          },
          "y": {
            "$ref": "types/uint16.schema.json"
          }
        },
        "required": [
          "x",
          "y"
        ]
      },
      "isMilitiaTrainingAllowed": {
        "type": "boolean"
      }
    },
    "required": [
      "townId",
      "sectors",
      "townPoint",
      "isMilitiaTrainingAllowed"
    ]
  }
}